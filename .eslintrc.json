{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["warn", 4],
        "quotes": ["warn", "single"],
        "semi": ["warn", "always"]
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    }
}
